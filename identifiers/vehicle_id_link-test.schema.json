{
   "$schema": "http://json-schema.org/schema#",
   "$id": "https://github.com/ITxPT/schematest/blob/main/identifiers/vehicle_id_link-test.schema.json",
   "allOf": [{ "$ref": "https://github.com/ITxPT/schematest/blob/main/headers/generic_header_link-test.schema.json" }],
   "properties": {
      "identifier": {
         "type": "object",
         "required": [
            "origin"
         ],
        "additionalProperties": false, 
        "properties": {
            "origin": {
               "type": "string",
               "minLength": 3,
               "maxLength": 16,
               "pattern": "^[LRS]{1}-[a-zA-Z0-9]"
            },
            "firstSeen": {
               "type": "string",
               "format": "date-time"
            },
            "lastSeen": {
               "type": "string",
               "format": "date-time"
            },            
            "EUI64": {
               "description": "IEEE 64-bit Global Identifier (EUI-64)",
               "type": "string",
               "pattern": "^([a-f0-9]{2}-){7}[a-f0-9]{2}$"
            },
            "VIN": {
               "description": "Vehicle Identification Number per ISO 3779:2009",
               "type": "string",
               "pattern": "^[A-Z0-9]{11,17}$"
            },            
            "UUID": {
               "description": "Universally unique identifier (UUID) per ISO/IEC 9834-8:2005",
               "type": "string",
               "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
            }
         }
      },
      "extensions": {
		 "type": ["object", "array"],
		 "required": [
				"origin"
			],
			"properties": {
				"origin": {
					"type": "string",
					"minLength": 3,
					"maxLength": 16,
					"pattern": "^[LRS]{1}-[a-zA-Z0-9]"
				}
			}
		}
   }
}
